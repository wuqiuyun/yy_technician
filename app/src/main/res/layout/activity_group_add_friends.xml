<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".module.im.groups.groupaddfriends.GroupAddFriendsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.yl.technician.widget.TitleView
            android:id="@+id/title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:right_text="@string/group_add_friend_add"
            app:title_text="@string/group_add_friend"
            >
        </com.yl.technician.widget.TitleView>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_add_togroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:background="@color/white">
            
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</layout>
