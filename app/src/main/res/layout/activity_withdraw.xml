<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.yl.technician.component.databind.ClickHandler"/>
        <variable
            name="click"
            type="ClickHandler"/>
    </data>

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_EFEFEF"
        tools:context=".module.mine.wallet.withdraw.WithdrawActivity">

        <com.yl.technician.widget.TitleView
            android:id="@+id/title_view"
            android:onClick="@{click.onClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bg_color="@color/white"
            app:title_text="@string/wallet_withdraw"/>



        <TableRow
            android:visibility="gone"
            android:onClick="@{click.onClick}"
            android:id="@+id/tr_withdraw_account"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_0_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_65"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_withdraw_account"
                android:src="@drawable/icon_icbc_nor"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_23"
                android:layout_marginLeft="@dimen/dp_15"/>
            <LinearLayout
                android:paddingRight="@dimen/dp_8"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_withdraw_account"
                    android:gravity="center|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/color_333333"
                    android:layout_marginLeft="@dimen/dp_10"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/tv_withdraw_account1"
                    android:gravity="center|right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_13"
                    android:textColor="@color/color_999999"
                    android:layout_marginLeft="@dimen/dp_10"/>
            </LinearLayout>


            <ImageView
                android:gravity="center"
                android:src="@drawable/icon_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_withdraw_nobankcard"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_F4F4F4">

            <TextView
                android:onClick="@{click.onClick}"
                android:id="@+id/tv_withdraw_addbankcard"
                android:gravity="center"
                android:background="@drawable/shape_bg_stroke_rectangle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_666666"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_5"
                android:text="添加银行卡"/>
        </TableRow>
        <View
            android:background="@color/color_F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10" />
        <TextView
            android:gravity="center|left"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/color_666666"
            android:paddingLeft="@dimen/dp_15"
            android:text="@string/wallet_withdraw_amount"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_62"
            android:background="@color/white">

            <TextView
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="bottom|center"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_30"
                android:textStyle="bold"
                android:text="￥"/>

            <EditText
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="bottom|left"
                android:id="@+id/et_withdraw_amount"
                android:inputType="numberDecimal"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_30"
                android:background="@null"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:textColorHighlight="@color/color_EFEFEF"
                android:textColor="@color/color_343434"/>

        </TableRow>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp">
            <View
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_F4F4F4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white">
            <TextView
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_15"
                android:text="@string/wallet_cash_withdraw_amount"/>
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_cash_withdraw_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0元"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp_15"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_all"
                android:onClick="@{click.onClick}"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/color_FF6600"
                android:textSize="@dimen/sp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:text="全部提现"/>
        </TableRow>
        <TableRow
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35">
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:text="提现金额需大于￥100"/>
            <View
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_0"
                android:layout_weight="1"/>

            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"
                android:text="手续费："/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_handling_fee"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="￥1.00"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_999999"/>
        </TableRow>

        <TableRow
            android:visibility="gone"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_343434"
                android:text="@string/wallet_received_amount"/>
            <TextView
                android:id="@+id/tv_received_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_red"
                android:textSize="@dimen/sp_12"
                android:text="0"/>
        </TableRow>

        <Button
            android:layout_marginTop="@dimen/dp_60"
            android:id="@+id/btn_ok"
            android:onClick="@{click.onClick}"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:text="@string/ok"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"
            android:background="@drawable/shape_btn"/>
    </LinearLayout>
</layout>