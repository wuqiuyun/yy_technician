<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.yl.technician.component.databind.ClickHandler"/>

        <variable
            name="click"
            type="ClickHandler"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.yl.technician.widget.TitleView
                android:id="@+id/title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title_text="@string/update_location"/>

            <!--地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/alpha_95_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/address_select"
                    android:textColor="@color/alpha_95_black"
                    android:textSize="@dimen/sp_16"/>


                <TextView
                    android:id="@+id/tv_district"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:drawablePadding="@dimen/dp_3"
                    android:onClick="@{click.onClick}"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingEnd="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_5"
                    android:text="@string/location_hint"
                    android:textSize="@dimen/sp_14"/>

                <ImageView
                    android:id="@+id/iv_location"
                    android:onClick="@{click.onClick}"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/location2"
                    android:padding="@dimen/dp_8"/>

            </LinearLayout>

            <!--详细地址-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_marginBottom="@dimen/dp_1"
                android:background="@color/alpha_95_white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_15">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/detailed_location"
                    android:textColor="@color/alpha_95_black"
                    android:textSize="@dimen/sp_16"/>

                <EditText
                    android:id="@+id/et_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_30"
                    android:hint="@string/location_hint4"
                    android:background="@null"
                    android:inputType="text"
                    android:lines="1"
                    android:paddingBottom="@dimen/dp_3"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_3"
                    android:textSize="@dimen/sp_14"
                    android:maxLength="20"/>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:background="@color/color_FF6600"
            android:gravity="center"
            android:onClick="@{click.onClick}"
            android:text="@string/save"
            android:textColor="@color/alpha_95_white"
            android:textSize="@dimen/sp_18"/>

    </RelativeLayout>
</layout>