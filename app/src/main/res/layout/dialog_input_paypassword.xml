<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="com.yl.technician.component.databind.ClickHandler"/>
        <variable
            name="click"
            type="ClickHandler"/>
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_pay_cancle"
                android:onClick="@{click.onClick}"
                android:layout_gravity="center|left"
                android:gravity="center|left"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:orientation="horizontal">
            <ImageView
                android:layout_marginLeft="@dimen/dp_15"
                android:src="@drawable/icon_arrow_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="请输入支付密码"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <include layout="@layout/layout_line_eee" />

        </RelativeLayout>

        <com.jungly.gridpasswordview.GridPasswordView
            android:layout_marginLeft="@dimen/dp_45"
            android:layout_marginRight="@dimen/dp_45"
            android:id="@+id/pswView"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            app:gpvTextSize="25sp"
            app:gpvLineColor="#DFDFDF"
            app:gpvLineWidth="1dp"
            app:gpvGridColor="#ffffff"
            app:gpvPasswordLength="6"
            app:gpvPasswordType="numberPassword"/>

        <TextView
            android:onClick="@{click.onClick}"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:id="@+id/tv_pay_forget"
            android:textColor="@color/text_color5"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:text="忘记密码?"
            android:layout_width="wrap_content"
            android:layout_height="45dp" />
    </LinearLayout>
</layout>