<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <import type="com.yl.technician.component.databind.ClickHandler"/>
        <variable
            name="click"
            type="ClickHandler"/>
    </data>
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.yl.technician.module.mine.popularize.PopularizeActivity">

        <!-- 标题 -->
        <com.yl.technician.widget.TitleView
            android:id="@+id/title_view"
            app:right_text="@string/description"
            app:title_text="推广邀请"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            android:background="@color/login_text_bg"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计获得收益"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/alpha_70_white"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/tv_income_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    tools:text="3123.00"/>
            </LinearLayout>
        </LinearLayout>

        <!-- 未绑定 -->
        <include
            android:id="@+id/ll_no_binding"
            android:visibility="gone"
            layout="@layout/view_popularize_invite"/>

        <!-- 已绑定 -->
        <LinearLayout
            android:id="@+id/ll_has_binding"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/iv_photo"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                tools:src="@drawable/meiz"/>

            <TextView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_14"
                android:text="推荐人："/>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_14"
                tools:text="用户昵称"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:gravity="right"
                android:textColor="@color/text_color2"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_height="wrap_content"
                tools:text="2018-09-17 10:15"/>
        </LinearLayout>

        <include
            android:id="@+id/store_income"
            layout="@layout/view_popularize_invite"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_3"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@color/color_CCCCCC"/>

        <include
            android:id="@+id/stylist_income"
            layout="@layout/view_popularize_invite"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_3"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@color/color_CCCCCC"/>

        <include
            android:id="@+id/user_income"
            layout="@layout/view_popularize_invite"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_3"
            android:background="@color/color_CCCCCC"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/color_EFEFEF"/>

        <TextView
            android:id="@+id/btn_share_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:gravity="center"
            android:background="@color/color_333333"
            android:onClick="@{click.onClick}"
            android:text="邀请用户"
            android:textColor="@color/alpha_75_white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</layout>