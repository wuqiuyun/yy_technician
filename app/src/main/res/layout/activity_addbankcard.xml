<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.yl.technician.component.databind.ClickHandler" />

        <variable
            name="click"
            type="ClickHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_bg"
        android:orientation="vertical">


        <com.yl.technician.widget.TitleView
            android:id="@+id/title_view"
            android:onClick="@{click.onClick}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bg_color="@color/white"
            app:title_text="添加银行卡"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/alpha_95_white"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_36"
                android:background="@color/color_F4F4F4"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="@dimen/dp_5"
                    android:gravity="bottom"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="请绑定本人银行卡账户"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_999999"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:onClick="@{click.onClick}"
                android:id="@+id/rl_bankcard"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/alpha_95_white">
                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户银行"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_30"
                    android:id="@+id/tv_bankcard_bankname"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择开户银行"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#666666"/>
                <ImageView
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_arrow_right"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:onClick="@{click.onClick}"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/alpha_95_white">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户支行"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"/>/>

                <EditText
                    android:id="@+id/et_bankcard_brach"
                    style="@style/EditTextDefultStyle"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:hint="请输入开户支行"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="@color/login_text"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:background="@color/login_bg" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:onClick="@{click.onClick}"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/alpha_95_white">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="银行卡号"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"/>/>

                <EditText
                    android:id="@+id/et_bankcard_id"
                    style="@style/EditTextDefultStyle"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:hint="请输入银行卡号"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="@color/login_text"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center|left"
                android:onClick="@{click.onClick}"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/alpha_95_white">


                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="持卡人姓名"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_333333"/>/>

                <EditText
                    android:layout_weight="1"
                    android:id="@+id/et_bankcard_name"
                    style="@style/EditTextDefultStyle"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:hint="请输入持卡人姓名"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:text=""
                    android:textColorHint="@color/login_text"
                    android:textSize="@dimen/sp_14" />
                <ImageView
                    android:onClick="@{click.onClick}"
                    android:layout_marginRight="@dimen/dp_15"
                    android:id="@+id/iv_doubt_nor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_doubt_nor"/>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btn_addbankcard_push"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@drawable/shape_btn"
            android:onClick="@{click.onClick}"
            android:text="提交"
            android:textColor="@color/alpha_95_white"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>
</layout>

