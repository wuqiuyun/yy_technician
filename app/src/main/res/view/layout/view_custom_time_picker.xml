<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/tv_time_pv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/alpha_60_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_time_pv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            android:textColor="@color/alpha_80_black"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/tv_time_pv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="确定"
            android:textColor="@color/alpha_60_black"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="15dp">

            <com.yl.technician.widget.mytimepickview.MyTimePickerView
                android:id="@+id/hour_start_pv"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/alpha_80_black"
                android:textSize="@dimen/sp_18" />

            <com.yl.technician.widget.mytimepickview.MyTimePickerView
                android:id="@+id/minute_start_pv"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="至"
                android:textColor="@color/alpha_80_black"
                android:textSize="@dimen/sp_18" />

            <com.yl.technician.widget.mytimepickview.MyTimePickerView
                android:id="@+id/hour_end_pv"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/alpha_80_black"
                android:textSize="@dimen/sp_18" />

            <com.yl.technician.widget.mytimepickview.MyTimePickerView
                android:id="@+id/minute_end_pv"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="2" />



        </LinearLayout>

    </RelativeLayout>

</LinearLayout>