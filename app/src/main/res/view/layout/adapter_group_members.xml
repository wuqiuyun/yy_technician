<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
    >

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_E0E0E0"
        android:paddingLeft="@dimen/dp_12"
        android:text="G"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:id="@+id/list_itease_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:background="#fff"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/avatar_container"
            android:layout_width="@dimen/dp_59"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="fitXY"
                android:src="@drawable/im_avatar" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/avatar_container"
            tools:text="Gjiazhe"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/mentioned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/avatar_container"
            android:paddingBottom="@dimen/dp_7"
            android:paddingLeft="@dimen/dp_7"
            android:paddingTop="@dimen/dp_7"
            android:layout_marginRight="@dimen/dp_50"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="ce"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/sp_14"
            android:visibility="visible" />

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/mentioned"
            android:ellipsize="end"
            android:padding="@dimen/dp_7"
            android:singleLine="true"
            android:visibility="gone"
            android:text="cesd"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/sp_14" />
        
        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:text="@string/gm_move_out"
            android:background="@drawable/shape_btn_remove"
            android:textColor="@color/text_bg"
            android:textSize="@dimen/sp_14"
            />

        <ImageView
            android:id="@+id/iv_master"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@drawable/send_friends"/>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_eee" />
</LinearLayout>