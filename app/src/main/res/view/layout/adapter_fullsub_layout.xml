<?xml version="1.0" encoding="utf-8"?><!--满减优惠券-->
<com.yl.technician.widget.swipemenu.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:clickable="true"
    android:paddingBottom="@dimen/dp_20"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">

    <LinearLayout
        android:paddingBottom="@dimen/dp_5"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/full_reduction"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_reduce_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/RMB"
                android:textColor="@color/text_color6"
                android:textSize="@dimen/sp_20" />

            <TextView
                android:id="@+id/tv_meet_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/full_reduction_hint"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupons_valid_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_valid_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/10/28"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <View
                android:layout_width="@dimen/dp_0_3"
                android:layout_height="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:background="@color/text_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/coupons_receive_time"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_received_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018/09/28"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_full_reduction_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/shape_btn_selected"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:paddingTop="@dimen/dp_3"
            android:text="@string/down_frame"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:text="删除"
        android:textColor="@color/white" />
</com.yl.technician.widget.swipemenu.SwipeMenuLayout>
