<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_itease_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/im_shape_sysmsg"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_notice_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar_container"
        android:layout_marginBottom="@dimen/dp_8"
        android:text="群消息"
        android:textColor="@color/color_3C3C3C"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_notice_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="18:52"
        android:textColor="@color/color_888888"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/tv_notice_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_notice_title"
        android:text="@string/im_stsnotice_item"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/sp_14" />
</RelativeLayout>