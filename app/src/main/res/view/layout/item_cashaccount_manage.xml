<?xml version="1.0" encoding="utf-8"?><!--满减优惠券-->
<com.yl.technician.widget.swipemenu.SwipeMenuLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:clickable="true"
    app:ios="false"
    app:leftSwipe="true"
    app:swipeEnable="true">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100">
        <com.yl.technician.widget.MyRoundLayout
            android:id="@+id/rl_1"
            android:layout_gravity="center|left"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:roundradius="5dp">

            <LinearLayout
                android:background="@drawable/background_boc"
                android:id="@+id/rl_bankcard"
                android:gravity="center|left"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">
                <ImageView
                    android:layout_gravity="top"
                    android:id="@+id/iv_bank_name"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:src="@drawable/icon_boc_nor" />

                <LinearLayout
                    android:layout_gravity="top"
                    android:gravity="center|top"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="中国银行"
                        android:textSize="@dimen/sp_13"
                        android:textColor="@color/white"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_2"
                        android:id="@+id/tv_bank_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="储蓄卡"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/alpha_75_white"/>
                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:id="@+id/tv_bank_cardid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="**** **** ****"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textSize="@dimen/sp_18"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </LinearLayout>
        </com.yl.technician.widget.MyRoundLayout>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:background="@drawable/shape_text_bg8"
        android:text="删除"
        android:textColor="@color/white" />
</com.yl.technician.widget.swipemenu.SwipeMenuLayout>
