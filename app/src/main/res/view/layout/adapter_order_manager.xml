<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_80">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/shape_circle_ff6600_5" />

        <LinearLayout
            android:id="@+id/view_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@id/iv_icon"
            android:orientation="vertical">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户："
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_343434"
                    android:textSize="@dimen/sp_16"
                    tools:text="艾米" />
            </TableRow>

            <TableRow
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="门店："
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/sp_14"
                    tools:text="宝安首脑丝情西乡店" />
            </TableRow>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_time_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/view_1"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_16"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/sp_14"
            tools:text="10:00~11:00" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_3"
            android:layout_alignLeft="@id/iv_icon"
            android:layout_alignParentBottom="true"
            android:background="@color/color_CCCCCC" />
    </RelativeLayout>
</layout>
