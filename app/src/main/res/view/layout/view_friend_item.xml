<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/im_shape_sysmsg"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10">

    <RelativeLayout
        android:id="@+id/vw_layout_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_59"
        android:background="#fff"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/vw_avatar_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true">

            <com.yl.core.widget.CircleImageView
                android:id="@+id/vw_avatar"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:layout_centerVertical="true"
                android:src="@drawable/im_avatar" />
        </RelativeLayout>

        <TextView
            android:id="@+id/vw_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_toRightOf="@id/vw_avatar_container"
            android:text="测试"
            android:textColor="@color/color_3C3C3C"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/vw_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/vw_tv_content"
            android:layout_toRightOf="@id/vw_avatar_container"
            android:ellipsize="end"
            android:padding="@dimen/dp_7"
            android:singleLine="true"
            android:text="描述"
            android:textColor="@color/color_888888"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/vw_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_add_friend_btn"
            android:paddingBottom="@dimen/dp_3"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:text="@string/ims_add_friend"
            android:textColor="@color/color_FFB848"
            android:textSize="@dimen/sp_12"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/vw_iv_pic"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/send_friends"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_below="@+id/vw_layout_item"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/color_eee" />
</RelativeLayout>