<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_45"
                  android:background="@color/colorPrimary"
                  android:gravity="center"
                  android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_left"
            style="@style/RippleBtnTheme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="false"
            android:drawablePadding="@dimen/dp_5"
            android:drawableStart="@drawable/icon_arrow_back"
            android:gravity="center"
            android:paddingEnd="@dimen/dp_5"
            android:paddingStart="@dimen/dp_10"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/sp_14"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_35"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="@drawable/edittext_bg_white"
                android:drawablePadding="5dp"
                android:paddingStart="@dimen/dp_10"
                android:drawableStart="@drawable/im_search"
                android:hint="@string/fi_more"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:paddingEnd="@dimen/dp_35"
                android:textSize="@dimen/sp_14"/>

            <ImageView
                android:id="@+id/search_iv_delete"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="@dimen/dp_20"
                android:src="@drawable/iv_delete_bg"
                android:visibility="gone"
                />
        </FrameLayout>

        <TextView
            android:visibility="visible"
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/search"
            android:textColor="@color/color_343434"
            android:textSize="@dimen/sp_14"/>
    </LinearLayout>
</layout>



