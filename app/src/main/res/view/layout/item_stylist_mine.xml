<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_280"
        android:paddingLeft="@dimen/dp_1"
        android:paddingRight="@dimen/dp_1"
        android:background="@drawable/shape_bg_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:scaleType="centerCrop"
            android:src="@drawable/meizi" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:ellipsize="end"
                android:maxEms="4"
                android:maxLines="1"
                android:singleLine="true"
                android:text="艾米"
                android:textColor="@color/color_343434"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_professor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/shape_text_bg5"
                android:paddingEnd="@dimen/dp_3"
                android:paddingStart="@dimen/dp_3"
                android:singleLine="true"
                android:text="总监"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">

            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating_bar"
                android:isIndicator="true"
                app:mrb_secondaryProgressTint="@color/color_FFA200"
                app:mrb_progressTint="@color/color_FFA200"
                style="@style/Widget.MaterialRatingBar.RatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:layout_gravity="center_vertical"
                android:rating="3.5"/>

            <TextView
                android:id="@+id/tv_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:gravity="end"
                android:singleLine="true"
                android:text="00分"
                android:textColor="@color/color_FFA200"
                android:textSize="@dimen/sp_12" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5">

            <TextView
                android:id="@+id/tv_maxSalesItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_rmb"
                android:singleLine="true"
                android:text="洗剪吹138元"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="@dimen/dp_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="end"
                android:singleLine="true"
                android:text="(月接单/210)"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_12" />
        </TableRow>
    </LinearLayout>
</layout>
