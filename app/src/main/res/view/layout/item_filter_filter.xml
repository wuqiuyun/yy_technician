<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.yl.technician.component.databind.ClickHandler" />

        <variable
            name="click"
            type="ClickHandler" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:padding="@dimen/dp_10"
            android:id="@+id/context_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_20"
            >

        </android.support.v7.widget.RecyclerView>

        <include layout="@layout/layout_line" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <Button
            android:text="@string/ok"
            android:id="@+id/tv_ok"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_30"
            android:textColor="@drawable/tv_text_selector"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:background="@drawable/text_bg_selector2"
                />
            <Button
            android:id="@+id/tv_reset"
            android:text="@string/reset"
            android:layout_width="@dimen/dp_66"
            android:layout_height="@dimen/dp_30"
            android:textColor="@drawable/tv_text_selector"
            android:layout_marginRight="@dimen/dp_20"
            android:gravity="center"
            android:layout_toLeftOf="@id/tv_ok"
            android:background="@drawable/text_bg_selector2"
                />
